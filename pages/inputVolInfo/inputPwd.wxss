.screen {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.password-view {
    width: 100%;
    height: 100%;
}
.center {
    position: absolute;
    top: 20%;
}
.access-title {
    font-size: 42rpx;
    height: 56rpx;
    line-height: 56rpx;
    width: 100%;
    padding: 30rpx 100rpx;
}
.password-input {
    width: 75%;
    height: 56rpx;
    border-bottom: 2rpx solid #F37D1B;
    padding: 10rpx 0;
    margin: 10rpx 100rpx 30rpx 100rpx;
} 
.select-radio {
    margin: 10rpx 100rpx 30rpx 100rpx;
    font-size: 36rpx;
}
.ver-btn {
    margin: 50rpx 100rpx;
    background-color: #F37D1B;
    color:#FFFFFF;
}
